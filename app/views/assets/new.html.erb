<%= form_tag(portfolio_assets_path(params[:portfolio_id])) do %>

  <%= label_tag(:symbol) %>
  <%= text_field_tag(:symbol) %><br>

  <%= label_tag(:shares) %>
  <%= text_field_tag(:shares) %><br>

  <%= label_tag(:price) %>
  <%= text_field_tag(:price) %><br>

  <%= label_tag(:asset_class) %>
  <%= select_tag(:asset_class, options_for_select(Asset::CLASSES.map {|n| [n.to_s.titleize, n]})) %><br>

  <%= submit_tag("Add to Portfolio") %>
<% end %>